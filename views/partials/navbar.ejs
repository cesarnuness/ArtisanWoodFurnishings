<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <style>
      /* Reset some default styles */
      body,
      h1,
      h2,
      h3,
      p {
        margin: 0;
        padding: 0;
      }

      body {
        font-family: Arial, sans-serif;
      }

      /* Navbar styles */
      .navbar {
        background-color: #333;
        overflow: hidden;
        margin: 0 auto;
      }

      .navbar a {
        float: left;
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }

      .navbar a:hover {
        background-color: #ddd;
        color: black;
      }

      .principal {
        background-color: #fff;
        height: 800px;
        width: 1200px;
        overflow: hidden;
      }

      /* Footer styles */
      .footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 20px;
      }

      /* Media query for responsiveness */
      @media screen and (max-width: 600px) {
        .navbar a {
          float: none;
          display: inline-block;
          text-align: center;
          width: 100%;
          padding: 10px;
        }
      }
    </style>
    <title>Awesome Navbar</title>
  </head>
  <body>
    <div class="navbar">
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="#">Services</a>
      <a href="#">Portfolio</a>
      <a href="#">Contact</a>
    </div>
  </body>
</html>
